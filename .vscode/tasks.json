{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "|= Proof",
            "type": "shell",
            "command": "${workspaceFolder}/build/CatInfer ${file}",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "|= Profiler",
            "type": "shell",
            "command": "rm -rf ./build/record.trace; xctrace record --output ./build/record.trace --template 'Time Profiler' --launch ${workspaceFolder}/build/CatInfer ${file}; open ./build/record.trace",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "${workspaceFolder}/tests/run.sh",
        },
    ]
}